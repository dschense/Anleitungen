sudo apt-get update

sudo apt-get -y install git bc

sudo git clone https://github.com/letsencrypt/letsencrypt /opt/letsencrypt

sudo service nginx stop

cd /opt/letsencrypt

./letsencrypt-auto certonly --standalone

